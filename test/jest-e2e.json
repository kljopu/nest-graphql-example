{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "taxonomy/taxonomy/(.*)": "<rootDir>/../libs/taxonomy/src/$1",
    "taxonomy/taxonomy": "<rootDir>/../libs/taxonomy/src"
  }
}